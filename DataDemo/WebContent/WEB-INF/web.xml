	<servlet-name>Facebook</servlet-name>
	<url-pattern>/fb</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
	<welcome-file>fb.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
	<servlet-name>welcome</servlet-name>
	<servlet-class>com.vidvaan.servlet.WelcomeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>welcome</servlet-name>
	<url-pattern>/wel</url-pattern>
	</servlet-mapping>

